{
  "name": "python-learning-platform",
  "version": "1.0.0",
  "description": "An interactive Python learning platform with structured worksheets for classroom use",
  "main": "index.html",
  "scripts": {
    "prestart": "node scripts/generate-version.js --dev",
    "start": "npx http-server -p 8000 -o",
    "serve": "npx http-server -p 8000",
    "predev": "node scripts/generate-version.js --dev",
    "dev": "npx live-server --port=8000",
    "prebuild": "node scripts/generate-version.js",
    "build": "echo 'Static build complete - files ready for deployment'",
    "deploy:docker": "docker build -t python-editor . && docker run -p 80:80 python-editor",
    "test": "node error-handler-test.js",
    "test:homepage:basic": "node homepage-basic-test.js",
    "test:validation": "node validation-test.js",
    "test:input-system": "node input-system-test.js",
    "test:all": "for f in *-test.js; do echo \"\\nðŸ§ª Running $f...\"; node \"$f\" || exit 1; done",
    "test:solution-code": "node validate-solution-code-test.js"
  },
  "keywords": [
    "python",
    "pyodide",
    "webassembly",
    "code-editor",
    "browser",
    "javascript"
  ],
  "author": "Python Browser Editor",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "pyodide": "^0.28.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/python-browser-editor.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/python-browser-editor/issues"
  },
  "homepage": "https://github.com/yourusername/python-browser-editor#readme"
